{
  "include": ["types.ts", "src"],
  "exclude": ["src/fixtures", "src/__dir_snapshots__"],
  "compilerOptions": {
    "rootDir": ".",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
  }
}
